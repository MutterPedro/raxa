{
  "name": "raxa",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:host": "npm run dev -- --host",
    "build": "npm run build:css && tsc --project tsconfig.build.json && vite build",
    "build:css": "npx tailwindcss -i ./src/index.css -o ./public/output.css",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "preview": "vite preview",
    "prepare": "husky",
    "test": "jest",
    "cucumber": "jest --testMatch **/*.steps.ts --testEnvironment node",
    "test:bdd": "concurrently --kill-others \"npm run dev:host\" \"sleep 2 && npm run cucumber\"",
    "test:coverage": "npm run test -- --collectCoverage",
    "test:watch": "npm run test -- --watch --testNamePattern='#unit|#sanity'",
    "test:integration": "npx playwright test"
  },
  "dependencies": {
    "dexie": "^4.0.4",
    "inversify": "^6.0.2",
    "nanoid": "^5.0.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^7.1.3",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.44.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@types/react-test-renderer": "^18.0.7",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "casual": "^1.6.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-cucumber": "^4.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "react-test-renderer": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vite-plugin-pwa": "^0.19.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint"
    ],
    "*.{ts,tsx,css,md}": [
      "prettier --check"
    ]
  }
}
