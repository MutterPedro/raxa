{
  "name": "raxa",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:host": "npm run dev -- --host",
    "build": "npm run build:css && tsc --project tsconfig.build.json && vite build",
    "build:css": "npx tailwindcss -i ./src/index.css -o ./public/output.css",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "preview": "vite preview",
    "prepare": "husky",
    "test": "jest",
    "cucumber": "jest --testMatch **/*.steps.ts --testEnvironment node",
    "test:bdd": "concurrently --kill-others \"npm run dev:host\" \"sleep 2 && npm run cucumber\"",
    "test:coverage": "npm run test -- --collectCoverage",
    "test:watch": "npm run test -- --watch --testNamePattern='#unit|#sanity'",
    "test:integration": "npx playwright test"
  },
  "dependencies": {
    "dexie": "^4.0.11",
    "inversify": "^6.2.1",
    "nanoid": "^5.0.9",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.1.3",
    "react-select": "^5.10.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.19.0",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.50.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.10",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/react-test-renderer": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@vitejs/plugin-react": "^4.3.4",
    "casual": "^1.6.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-cucumber": "^4.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.4.2",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vite-plugin-pwa": "^0.21.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint"
    ],
    "*.{ts,tsx,css,md}": [
      "prettier --check"
    ]
  }
}
